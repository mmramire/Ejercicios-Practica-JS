function miFuncion2(string, longitudCorte) {
  return string.split(longitudCorte - 1);   --No retorna lo correcto
}
let rpta2 = miFuncion2("Hola Mundo", 4);
console.log(rpta2);


function miFuncion3(string, separator) {
  return string.split(separator);
}
let rpta3 = miFuncion3("hola que tal", " ");
console.log(rpta3);


function miFuncion4(string, repetir) {
  let nueString = '';
  let cont = 0;
  while (cont < repetir) {
    nueString += `${string} `;
    cont++;
  }
  return nueString;
}
let rpta4 = miFuncion4("Hola Mundo", 3);
console.log(rpta4);
